  - id: mod_bus_Inverter
    tx_pin: GPIO17
    rx_pin: GPIO16
    baud_rate: 9600
    stop_bits: 1

  - id: mod_bus_bms
    tx_pin: GPIO27
    rx_pin: GPIO14
    baud_rate: 9600
    stop_bits: 1

