text_sensor:
  - platform: template
    id: Battery_current_direction_1
    name: "Battery current direction 1"
    lambda: !lambda |-
      if (id(Battery_current_direction).state < 1 ) {
        return {"Wird geladen"} ;
      }
      else {
        return {"Wird entladen"} ;
      }
    icon: mdi:arrow-top-left-bottom-right



